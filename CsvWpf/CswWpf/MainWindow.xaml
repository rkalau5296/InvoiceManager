<Window x:Class="CswWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CswWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Button" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="42,25,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <DataGrid x:Name="dataGrid" Grid.ColumnSpan="2" d:ItemsSource="{d:SampleData ItemCount=5}" Height="349" VerticalAlignment="Top" Margin="0,85,0,0"/>

    </Grid>
</Window>
